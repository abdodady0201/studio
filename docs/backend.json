
{
  "entities": {
    "UserProfile": {
      "title": "UserProfile",
      "description": "User account information and preferences",
      "type": "object",
      "properties": {
        "uid": { "type": "string" },
        "displayName": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "lastReadSurah": { "type": "number" },
        "lastReadVerse": { "type": "number" },
        "settings": {
          "type": "object",
          "properties": {
            "fontSize": { "type": "number" },
            "isDarkMode": { "type": "boolean" },
            "notificationsEnabled": { "type": "boolean" }
          }
        }
      },
      "required": ["uid", "email"]
    },
    "Favorite": {
      "title": "Favorite",
      "description": "Bookmarked surahs or specific verses",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "type": { "type": "string", "enum": ["surah", "verse"] },
        "surahId": { "type": "number" },
        "verseNumber": { "type": "number" },
        "createdAt": { "type": "string", "format": "date-time" }
      }
    }
  },
  "auth": {
    "providers": ["google.com", "password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": "#/entities/UserProfile",
      "description": "User profile document"
    },
    "/users/{userId}/favorites/{favoriteId}": {
      "schema": "#/entities/Favorite",
      "description": "Collection of user favorites"
    }
  }
}
